@page "/Account/Login"
@using HardwareStore_Application.Pages.Account
@model HardwareStore_Application.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<link rel="stylesheet" href="~/css/login.css">


<div class="login-container">
    <div class="login-card">
        <a href="/Index" class="back-nav">
            <i class="fas fa-arrow-left"></i>
            <span>Back to Store</span>
        </a>
        <div class="login-header">
            <h2>Hardware Store Login</h2>
            <p>Sign in to your account</p>
        </div>

        <form method="post" class="login-form">
            <div asp-validation-summary="All" class="validation-summary"></div>
            
            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-info">
                    @Model.Message
                </div>
            }

            <div class="form-group">
                <label asp-for="Input.Email" class="form-label">Email Address</label>
                <input asp-for="Input.Email" type="email" class="form-control" placeholder="Enter your email" required />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password" class="form-label">Password</label>
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Enter your password" required />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input asp-for="Input.RememberMe" type="checkbox" class="form-check-input" />
                <label asp-for="Input.RememberMe" class="form-check-label">Keep me signed in</label>
            </div>

            <button type="submit" class="btn btn-primary btn-login">Sign In</button>

            <div class="login-footer">
                <p>Don't have an account? <a href="/Account/Register" class="register-link">Create one here</a></p>
                <div class="demo-accounts">
                    <h4>Demo Accounts:</h4>
                    <p><strong>john.doe@example.com</strong> / password123</p>
                    <p><strong>user@test.com</strong> / test123</p>
                </div>
            </div>
        </form>
    </div>
</div>